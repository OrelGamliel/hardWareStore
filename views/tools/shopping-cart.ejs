<% include ../partials/header %>

<div class="jumbotron text-center">
        <h1>Shopping-Cart</h1>
      </div>
      

<% if (tools) { %>
    <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3" >
             <ul class="list-group">
              <% tools.forEach(function(tool){ %>   
                <li class="list-group-item">
                        <span class="badge"><%= tool.qty %></span>
                        <strong><%= tool.item.name %></strong>
                        <span class="label label-success"><%= tool.price %> $</span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                    <li><a href="/reduce/<%= tool.item._id%>">Reduce by 1</a></li>
                                    <li><a href="/remove/<%= tool.item._id%>">Remove All</a></li>    
                            </ul>
                        </div>
                    </li>
                <% }) %>    
          </ul>
            </div>
          </div>
          <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3" >
                  <strong>Total: <%= totalPrice %> $   </strong>
                  </div>
                </div>
                <hr>
                <div class="row">
                        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3" >
                      <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
                      </div>
                    </div> 
    <% } %>
    <% if (!tools) { %>
    <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3" >
            <h2>No items in cart</h2>
            </div>
          </div>        
          <% } %>
          <a href="/catalog">Go Back</a>       
<% include ../partials/footer %>